-- nano ~/.xscreensaver
-- "Conky"  conky -q --window-id=$XSCREENSAVER_WINDOW -c ~/.conkyrc_screensaver \n\

conky.config = {
	background = false,
	update_interval = 1,

	cpu_avg_samples = 2,
	net_avg_samples = 2,

	override_utf8_locale = true,

	double_buffer = true,
	no_buffers = true,

	text_buffer_size = 2048,
	--imlib_cache_size = '0',

	temperature_unit = 'fahrenheit',

	-- Only display eth0 if connected,
	if_up_strictness = 'address',

	-- Window specifications,
	own_window_class = 'Conky',
	own_window = true,
	-- own_window_type = 'normal',
	-- set transparent to yes to eliminate box,
	own_window_transparent = false,
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	own_window_argb_visual = true,
	-- set darkness of box around conky,
	own_window_argb_value = 0,

	border_inner_margin = 0,
	border_outer_margin = 0,

	minimum_width = 610, minimum_height = 610,
	maximum_width = 610, maximum_height = 610,

	alignment = 'mm',
        -- gap_x is used to shift from 'mm' to the middle of the left monitor
        gap_x=1.5*1280, 

	-- Graphics settings,
	draw_shades = true,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = false,

	-- Text settings,
	use_xft = true,
	font = 'caviar dreams:size=8',
	xftalpha = 0.5,

	uppercase = false,

	default_color = '#FFFFFF',

	times_in_seconds = true,

	-- Lua Load,
	lua_load = '~/.conky/clock_rings_screensaver.lua',
	lua_draw_hook_pre = 'clock_rings',
};

conky.text = [[
${voffset 8}
${voffset 102}${font caviar dreams:size=30}${time %A}\
${alignr}${time %b} ${time %e}
${alignr}${time %Y}${font}

${voffset 390}
${font Liberation Mono:size=16}

${if_running pianobar}\
Station: ${execi 12 head -n 1  ~/.config/pianobar/nowplaying}
Artist:  ${execi 2 head -2  ~/.config/pianobar/nowplaying | tail -n 1}
Title:   ${execi 2 head -3  ~/.config/pianobar/nowplaying | tail -n 1}
${voffset -5}${endif}${voffset 5}
${execi 600 gcal | sed s/"< "/" <"/}${font}]];
