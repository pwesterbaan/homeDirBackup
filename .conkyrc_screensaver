conky.config = {
	background = false,
	update_interval = 1,

	cpu_avg_samples = 2,
	net_avg_samples = 2,

	override_utf8_locale = true,

	double_buffer = true,
	no_buffers = true,

	text_buffer_size = 2048,
	--imlib_cache_size = '0',

	temperature_unit = 'fahrenheit',

	-- Only display eth0 if connected,
	if_up_strictness = 'address',

	-- Window specifications,
	own_window_class = 'Conky',
	own_window = true,
	own_window_type = 'normal',
	-- set transparent to yes to eliminate box,
	own_window_transparent = false,
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	own_window_argb_visual = true,
	-- set darkness of box around conky,
	own_window_argb_value = 255,


	border_inner_margin = 0,
	border_outer_margin = 0,

	minimum_width = 550, minimum_height = 610,
	maximum_width = 2400,

	alignment = 'middle_middle',

	-- Graphics settings,
	draw_shades = true,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = false,

	-- Text settings,
	use_xft = true,
	font = 'caviar dreams:size=8',
	xftalpha = 0.5,

	uppercase = false,

	default_color = '#FFFFFF',

	times_in_seconds = true,

	-- Lua Load,
	lua_load = '~/.conky/clock_rings_screensaver.lua',
	lua_draw_hook_pre = 'clock_rings_screensaver',
};

conky.text = [[
${voffset 8}${font caviar dreams:size=30}${time %A}${alignr}${time %b}${time %e}
${alignr}${time %Y}${font}

${voffset 390}
${font caviar dreams:size=16}

#${hr}${font Liberation Mono:size=11.5}
#${execi 600 gcal .+|cut -c  1-22|tail -n 8| sed s/"< "/" <"/}
#${execi 600 gcal .+|cut -c 27-50|tail -n 8| head -n 5}
#${hr}${font Liberation Mono:size=7.5}
${if_running pianobar}  Station: ${execi 10 head -n 1  ~/.config/pianobar/nowplaying}
## Add line: If text longer than 24, scroll, else, just display
## Need to find a way to count string length
  Artist:    ${execi 6 head -2  ~/.config/pianobar/nowplaying | tail -n 1}
  Title:     ${execi 6 head -3  ~/.config/pianobar/nowplaying | tail -n 1}
${voffset -5}${endif}${voffset 5}
${font}
]];
